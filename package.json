{
	"name": "onscroll-effect",
	"version": "1.0.0",
	"description": "Toggle class to enable CSS animations when element appears on viewport when scrolling.",
	"main": "dist/onscroll-effect.js",
	"scripts": {
		"lint": "eslint src",
		"lint:fix": "eslint --fix src",
		"prettier": "prettier --debug-check src/**/*.js",
		"prettier:write": "prettier --write src/**/*.js",
		"test": "npm run prettier:write",
		"clean": "del-cli --force dist",
		"terser": "terser src/index.js --compress --mangle --output dist/onscroll-effect.min.js",
		"build": "npm run clean && npm run terser"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Twikito/onscroll-effect.git"
	},
	"keywords": [
		"scroll",
		"toggle",
		"css",
		"animation"
	],
	"author": "Matthieu Bu√© <https://twikito.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Twikito/onscroll-effect/issues"
	},
	"homepage": "https://github.com/Twikito/onscroll-effect#readme",
	"dependencies": {},
	"devDependencies": {
		"del-cli": "^1.1.0",
		"eslint": "^5.4.0",
		"prettier": "^1.14.2",
		"terser": "^3.8.1"
	}
}
